<Window x:Class="WinObserver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinObserver" xmlns:viewmodel="clr-namespace:WinObserver.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ApplicationViewModel}"
        mc:Ignorable="d"
        Title="Apparat - v0.0.11 pre-alpha " MinHeight="300" MinWidth="400" Height="550" Width="800" Loaded="Window_Loaded"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox x:Name="GetIp" HorizontalAlignment="Left" Margin="280,0,0,0" VerticalAlignment="Center" Width="120" Text="{Binding TextBoxHostname}"/>
            <!--<ComboBox x:Name="GetIp" HorizontalAlignment="Left" Margin="280,0,0,0" VerticalAlignment="Center" Width="120" Text="hellos" IsEditable="True"/>-->
            <Button x:Name="ControlButton" Background="#FFBCBCE3" Content="{Binding ControlBtnName}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="425,0,0,0" Command="{Binding ControlTracert}" Width="64"/>
        </Grid>
        <TabControl DockPanel.Dock="Right" Grid.Row="1">
            <TabItem Header="{Binding NameTableDataGrid}">
                <!--<TabItem Header="{Binding NameTableDataGrid}">-->
                <Grid Background="Azure">
                    <DataGrid x:Name="DG1" ItemsSource="{Binding TracertObject, UpdateSourceTrigger=PropertyChanged}"  AutoGenerateColumns="False" RowBackground="GhostWhite" AlternatingRowBackground ="LightGray" GridLinesVisibility="None" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding NumberHostname}" Width="0.25*"/>
                            <DataGridTextColumn Header="Hostname" Binding="{Binding Hostname}" Width="*"/>
                            <DataGridTextColumn Header="Loss %" Binding="{Binding PercentLossPacket, StringFormat=N1}" Width="*"/>
                            <DataGridTextColumn Header="Last Delay" Binding="{Binding LastDelay}" Width="*"/>
                            <DataGridTextColumn Header="Minimal" Binding="{Binding MinPing}" Width="*"/>
                            <DataGridTextColumn Header="Middle" Binding="{Binding MiddlePing}" Width="*"/>
                            <DataGridTextColumn Header="Maximum" Binding="{Binding MaxPing}" Width="*"/>
                            <DataGridTextColumn Header="All Packet" Binding="{Binding CounterPacket}" Width="*"/>
                            <DataGridTextColumn Header="Loss Packet" Binding="{Binding CounterLossPacket}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch"/>
        <lvc:CartesianChart 
                    Grid.Row="3"
                    Series="{Binding Losses}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}"
                    ZoomMode="None" 
                    LegendPosition="Bottom" LegendFontFamily="Console">
            <!--XAxes="{Binding XAxes}"-->
            <!--TooltipPosition="Hidden" 
                    LegendPosition="Bottom"-->
            <!--ZoomMode="X" 
                    LegendFontFamily="Console"-->
        </lvc:CartesianChart>
    </Grid>
</Window>
